    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Teste com arquivos",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/questao4",
            "args": ["CadeiaA.txt", "CadeiaB.txt"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Habilitar a reformatação automática para gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
